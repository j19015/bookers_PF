<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-sm-0 mx-auto">
      <h1>Editing Book</h1>
      <div>
        <% if @book.errors.any? %>
          <h2 class="text-danger"><%= @book.errors.count %>errors prohibited this obj from being saved:</h2>
          <ul>
            <% @book.errors.full_messages.each do |message| %>
              <li class="text-danger"><%= message %></li>
            <% end %>
          </ul>
        <% end %>
      </div>
      <%= form_with model: @book,local:true do |f| %>
        <p>Title</p>
        <%= f.text_field :title %>

        <p>Opinion</p>
        <%= f.text_area :body %><br/>

        <%= f.submit 'Update Book' ,class:"btn btn-success mt-3 mb-3" %>
      <% end %>

      <p><%= link_to "Show",book_path(@book.id)  %> | <%= link_to "Back",books_path %></p>
    </div>
  </div>
</div>