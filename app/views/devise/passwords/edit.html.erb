<div class="mt-3 ml-3">
<h2 class="font-weight-bold">パスワード変更</h2>

<%= form_with model:@user,url: user_password_path, method: :patch do |f| %>
  <%= render "devise/shared/error_messages", resource: @user %>

  <%= f.hidden_field :reset_password_token %>

  <div class="field mt-3">
    <%= f.label :password, "新しいパスワード" ,class:"font-weight-bold"%><br />
    <%= f.password_field :password, autofocus: true, autocomplete: "new-password" %>
    <div>
      <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)文字以上で入力してください</em><br />
      <% end %>
    </div>
  </div>

  <div class="field mt-3">
    <%= f.label :password_confirmation, "新しいパスワード(確認用)",class:"font-weight-bold" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
     <div>
      <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)文字以上で入力してください</em><br />
      <% end %>
    </div>
  </div>

  <div class="actions">
    <%= f.submit "変更",class:"btn-success btn-lg mt-3" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>