<div class="container px-5 px-sm-0">
  <div class="row">
    <%= render 'users/list',user: @user,book: @book %>
    <div class="col-md-8 offset-md-1">
      <h2>Users</h1>
      <%= link_to 'グループを作成する',new_group_path %>|<%= link_to 'グループ一覧',groups_path %>
      <table class="table table-hover table-inverse">
        <tr>
          <th>image</th>
          <th>name</th>
          <th> </th>
          <th></th>
        </tr>
          <% @users.each do |user| %>
            <tr>
              <td>
                <%= link_to user_path(user.id) do %>
                  <%= image_tag user.get_profile_image(100,100) %>
                <% end %>
              </td>

              <td><%= user.name %></td>
          
              <td><%= link_to "Show", user_path(user.id) %></td>
              <td>
              <% if user.follow_confirm?(current_user.id,user.id) %>
                <%= link_to "フォローを外す",user_relationships_path(user.id),method: :delete,class:"text-danger" %>
              <% else %>
                <%= link_to "フォローする",user_relationships_path(user.id),method: :post,class: "text-primary" %>
              <% end %>
              </td>
            </tr>
          <% end %>
      </table>
    </div>
  </div>
</div>