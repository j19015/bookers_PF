<div class="container bg-dark">
    <div id="messages">
      <%= render 'messages',send_messages:@send_messages,receive_messages:@receive_messages%>
    </div>
  <div class="row">
    <%= form_with model:@message ,url:messages_path,method: :post,local:false ,class:"w-100" do |f| %>
      <div class="d-flex justify-content-center">
        <%= f.text_field :chat ,class:"w-75",placeholder:"ここにチャットを入力してください" %>
        <%= f.hidden_field :receive_user_id,value: params[:id]%>
        <%= f.submit "送信" ,class:"btn btn-secondary w-25"%>
      </div>
    <% end %>
  </div>
</div>