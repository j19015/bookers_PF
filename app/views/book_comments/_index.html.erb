<table class="table table-borderless ">
  <thead>
    <tr>
      <th>投稿者</th>
      <th>コメント</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% book.book_comments.each do |comment| %>
      <tr>
        <td>
          <%= image_tag comment.user.get_profile_image(50,50)%><br>
          <%= comment.user.name %>
        </td>
        <td><p><%= comment.comment %></p></td>
        <td>
          <% if comment.user.id== current_user.id %>
            <%= link_to "Destroy",book_book_comment_path(book,comment),method: :delete,remote: true,data: {confirm: "削除しますか？"},class:"btn btn-danger btn-sm" %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>